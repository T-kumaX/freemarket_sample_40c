<%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" %>
<%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" %>
<div id="carousel-sample" class="carousel slide">
    <ol class="carousel-indicators">
        <li data-target="#carousel-sample" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-sample" data-slide-to="1"></li>
        <li data-target="#carousel-sample" data-slide-to="2"></li>
        <li data-target="#carousel-sample" data-slide-to="3"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
        <div class="item active">
          <div class="top-main-visual">

          </div>
        <div class="carousel-caption">
        </div>
        </div>
        <div class="item item2">
          <div class="top-main-visual">
             <div class="carousel-caption">
             </div>
          </div>
        </div>

        <div class="item item3">
          <div class="top-main-visual">
            <div class="carousel-caption">
            </div>
          </div>
        </div>

        <div class="item item4">
          <div class="top-main-visual">
            <div class="carousel-caption">
            </div>
          </div>
        </div>

    </div>

    <a class="left carousel-control" href="#carousel-sample" role="button" data-slide="prev">
        <img class="glyphicon-chevron-left" src="https://www.mercari.com/jp/assets/img/common/jp/top/carousel-prev.png">
        <span class="sr-only">戻る</span>
    </a>
    <a class="right carousel-control" href="#carousel-sample" role="button" data-slide="next">
        <img class="glyphicon-chevron-right" src="https://www.mercari.com/jp/assets/img/common/jp/top/carousel-next.png">
        <span class="sr-only">次へ</span>
    </a>
</div>
