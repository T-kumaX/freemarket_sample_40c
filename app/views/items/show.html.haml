.item__box-container
  %h1.item-name
    =@item.name
  .item-main-content
    .item-image
      .active-image
        %p
          %img{src: @item.image.image1.url}
          %img{src: "https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_2.jpg?1539045823"}/
          %img{src: "https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_3.jpg?1539045823"}/
          %img{src: "https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_4.jpg?1539045823"}/
      .images
        %ol
          %li
            %img.item-slide.item-image1{src: @item.image.image1.url}/
          %li
            %img.item-slide.item-image2{src: "https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_2.jpg?1539045823"}/
          %li
            %img.item-slide.item-image3{src: "https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_3.jpg?1539045823"}/
          %li
            %img.item-slide.item-image4{src: "https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_4.jpg?1539045823"}/
    .item-tabel
      %table.item-detail-table
        %tbody
          %tr
            %th
              出品者
            %td
              %a{href: "#"} DPS(ぷーんです)＠大人ふるぎ養成講座
              %div
                .item-user-raiting
                  %i.icon.fa.fa-smile
                  %span 618
                .item-user-raiting
                  %i.icon.fa.fa-meh
                  %span 22
                .item-user-raiting
                  %i.icon.fa.fa-frown
                  %span 3
          %tr
            %th
              カテゴリー
            %td
              %a{href: "#"} レディース
              %a{href: "#"}
                .sub-category
                  %i.fa.fa-angle-right
                  バッグ
                .sub--sub-category
                  %i.fa.fa-angle-right
                  ショルダーバッグ
          %tr
            %th
              ブランド
            %td
              %a{href: "#"} コーチ
          %tr
            %th
              商品の状態
            %td
              やや傷や汚れあり
          %tr
            %th
              配送料の負担
            %td
              送料込み(出品者負担)
          %tr
            %th
              配送の方法
            %td
              らくらくメルカリ便
          %tr
            %th
              配送元地域
            %td
              %a{href: "#"} 兵庫県
          %tr
            %th
              発送日の目安
            %td
              1~2日で発送
  .item-price-box
    %span.item-price ¥ 3,380
    %span.item-tax (税込)
    %span.item-shipping 送料込み
  =link_to "購入画面に進む", buy_item_url, class: "item-buy-btn"
  %input{name: "seller_id", type: "hidden", value: @item.seller_id, class: "seller-id"}
  .item-description
    %p.item-description-inner
      
  .item-button-list
    %button{type: "button"}
      %i.far.fa-heart
      %span いいね！
      %span 6
    %a.flag{href: "#"}
      %i.far.fa-flag
      %span 不適切な商品の報告
    %a.lock{href: "#"}
      %i.fas.fa-unlock-alt
      %span あんしん・あんぜんへの取り組み
.item-detail-message
  .message-container
    .message-content
      %ul.message-items
        %li
          .message-user
            %figure
              .message-user-unknown
                %img{alt: "", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/user-icon.svg?3410070962"}/
          .message-body
            .message-body-text
              出品者がコメントを削除しました
            .message-icons
              %time.message-icon-left
                %i.far.fa-clock
                %span 73日前
            %i.icon-balloon
    .message-content
      = form_with model: @comments do |form|
        %p
          相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
        = form.text_area :comment
        = form.submit value="コメントする"
%ul.nav-item-link
  %li.nav-item-link-prev
    - if @previous
      =link_to item_url(@previous) do
        %i.fa.fa-angle-left
        =@previous.name
  %li.nav-item-link-next
    - if @next
      =link_to item_url(@next) do
        %i.fa.fa-angle-right
        =@next.name
